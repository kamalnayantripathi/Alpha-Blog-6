

<h1 class="text-center mt-4">Articles</h1>

<div class="container">
<% @articles.each do |article| %>
	<div class="card mt-4">
	  <div class="card-header font-italic shadow mb-5 bg-white rounded">
	    by Rocky Bhai
	  </div>
	  <div class="card-body">
	    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
	    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
	   <button type="button" class="btn btn-outline-secondary"><%= link_to "View", article_path(article)%></button>
	   <button type="button" class="btn btn-outline-primary"><%= link_to "Edit", edit_article_path(article)%></button>
	   <button type="button" class="btn btn-outline-danger"><%= link_to "Delete", article_path(article),method: :delete%></button>
	  </div>
	  <div class="card-footer text-muted">
	  	<small> created <%= time_ago_in_words(article.created_at) %> ago,
	  	edited <%= time_ago_in_words(article.updated_at) %>ago</small>
	  </div>
	</div>
<% end %>
</div>




<h2 class="text-center mt-4"><%= @article.title %></h2>

<div class="container">
    <div class="card mt-4">
      <div class="card-header font-italic shadow mb-5 bg-white rounded">
        by <%= link_to @article.user.username, user_path(@article.user) if @article.user %>
      </div>
      <div class="card-body">
        <div class="card-text"><%= simple_format(@article.description) %></div>
      <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
         <button type="button" class="btn btn-outline-primary"><%= link_to "Edit", edit_article_path(@article)%></button>
         <button type="button" class="btn btn-outline-danger"><%= link_to "Delete", article_path(@article),method: :delete%></button>
       <% end %>
      </div>
      <div class="card-footer text-muted">
        <small> created <%= time_ago_in_words(@article.created_at) %> ago,
        edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
      </div>
    </div>
</div>
